<h1>Jugadores</h1>

<%= link_to 'Ver historial de rondas', rounds_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dinero</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= number_to_currency(player.money, unit: "$") %></td>
        <td><%= link_to 'Mostrar', player %></td>
        <td><%= link_to 'Editar', edit_player_path(player) %></td>
        <td><%= button_to 'Eliminar', player, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Jugador', new_player_path %>
